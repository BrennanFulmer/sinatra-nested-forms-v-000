<h2>Pirate</h2>

<div class="pirate">
  <h3>Name: <%= @pirate.name %> </h3>
  <h4>Weight: <%= @pirate.weight %> </h4>
  <h4>Height: <%= @pirate.height %> </h4>
</div>
<br>

<h2>First Ship</h2>
<div>
  <h3>Name: <%= @ships[0].name %> </h3>
  <h4>Type: <%= @ships[0].type %> </h4>
  <h4>Booty: <%= @ships[0].booty %> </h4>
</div>
<br>

<h2>Second Ship</h2>
<div>
  <h3>Name: <%= @ships[1].name %> </h3>
  <h4>Type: <%= @ships[1].type %> </h4>
  <h4>Booty: <%= @ships[1].booty %> </h4>
</div>

<h2>Ships</h2>
<% @ships.each do |ship| %>
  <div class="ship">
    <p>Name: <%= ship.name %></p><br>
    <p>Type: <%= ship.type %></p><br>
    <p>Booty: <%= ship.booty %></p>
  </div><br>
<% end %>